{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "lib": ["es2017"],
    "strict": true,
    "esModuleInterop": false,
    "outDir": "out-tsc",
    "rootDir": "./"
  },
  "include": ["./src/**/*.ts", "./src/**/*.js"],
  "exclude": ["node_modules", "**/tests/*"],
  "typeRoots": ["./src/typings", "./node_modules/@types/"],
  "noImplicitAny": false
}
